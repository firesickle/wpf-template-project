<Window x:Class="DataToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataToolkit"
        mc:Ignorable="d"
        Title="Data Toolkit" Height="650" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Window.Resources>
        <!-- Dark theme button style for main menu -->
        <Style x:Key="DarkToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.TextAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="BorderBrush" Value="#1C97EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for action buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5E4389"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#7254A5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7254A5"/>
                                <Setter Property="BorderBrush" Value="#8A6BBF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4A3572"/>
                                <Setter Property="BorderBrush" Value="#5E4389"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for secondary action buttons in expanded panel -->
        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#525257"/>
                                <Setter Property="BorderBrush" Value="#777777"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#323237"/>
                                <Setter Property="BorderBrush" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animation for expanding drag panel -->
        <Storyboard x:Key="ExpandDragPanel">
            <!-- Using ScaleTransform instead of direct height animation -->
            <DoubleAnimation 
                Storyboard.TargetName="MenuRowScale" 
                Storyboard.TargetProperty="ScaleY"
                To="0.01" 
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                Storyboard.TargetName="DragRowScale" 
                Storyboard.TargetProperty="ScaleY"
                To="1.8" 
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                Storyboard.TargetName="ExpandedOptions" 
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" 
                Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animation for collapsing drag panel -->
        <Storyboard x:Key="CollapseDragPanel">
            <DoubleAnimation 
                Storyboard.TargetName="MenuRowScale" 
                Storyboard.TargetProperty="ScaleY"
                To="1" 
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                Storyboard.TargetName="DragRowScale" 
                Storyboard.TargetProperty="ScaleY"
                To="1" 
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                Storyboard.TargetName="ExpandedOptions" 
                Storyboard.TargetProperty="Opacity"
                To="0" 
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.4*" x:Name="MenuSection" />
            <RowDefinition Height="0.6*" x:Name="DragSection" />
        </Grid.RowDefinitions>

        <!-- Logo and App Info Panel -->
        <Border Grid.Row="0" 
                Background="#1E1E1E" 
                BorderBrush="#3F3F46"
                BorderThickness="0,0,0,1"
                Padding="10,5">
            <DockPanel>
                <Viewbox Width="30" Height="30" DockPanel.Dock="Left">
                    <Canvas Width="24" Height="24">
                        <!-- Simple data logo - you can replace with your actual logo -->
                        <Path Data="M4,2H20A2,2 0 0,1 22,4V20A2,2 0 0,1 20,22H4A2,2 0 0,1 2,20V4A2,2 0 0,1 4,2M4,4V20H20V4H4M6,6H10V10H6V6M12,6H18V10H12V6M6,12H18V18H6V12Z" 
                              Fill="#007ACC"/>
                    </Canvas>
                </Viewbox>
                <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                    <TextBlock Text="Data Toolkit" 
                               Foreground="#E0E0E0" 
                               FontWeight="SemiBold" 
                               FontSize="14"/>
                    <TextBlock Text="v1.0.0" 
                               Foreground="#AEAEB2" 
                               FontSize="11"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Button Menu Panel -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="12,10">
            <ScrollViewer.RenderTransform>
                <ScaleTransform x:Name="MenuRowScale" ScaleY="1" CenterY="0"/>
            </ScrollViewer.RenderTransform>
            <WrapPanel Orientation="Horizontal">
                <Button Content="Scaffold" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnScaffoldClick" />
                <Button Content="Reload" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnReloadClick" />
                <Button Content="Settings" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnSettingsClick" />
                <Button Content="OneOff" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnOneOffClick" />
                <Button Content="Compare" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnCompareClick" />
                <Button Content="Analyze" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnAnalyzeClick" />
                <Button Content="DataMap" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnDataMapClick" />
                <Button Content="View Samples" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnViewSamplesClick" />
                <Button Content="Farm" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnFarmClick" />
                <Button Content="ScheduleJobs" 
                        Width="120" Height="80" 
                        Margin="5"
                        Style="{StaticResource DarkToolButtonStyle}"
                        Click="OnScheduleJobsClick" />
            </WrapPanel>
        </ScrollViewer>

        <!-- Drag & Drop Zone -->
        <Border Grid.Row="2" 
                BorderBrush="#3F3F46" 
                BorderThickness="1" 
                CornerRadius="6" 
                Margin="12,5,12,12" 
                Background="#2D2D30"
                AllowDrop="True"
                DragEnter="DropZone_DragEnter"
                DragLeave="DropZone_DragLeave"
                Drop="DropZone_Drop"
                Name="DropZoneBorder">
            <Border.RenderTransform>
                <ScaleTransform x:Name="DragRowScale" ScaleY="1" CenterY="0"/>
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Drop Files Here" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,5" />

                <!-- Expanded Options Panel (initially hidden) -->
                <Border Grid.Row="1" 
                        Background="#333337" 
                        BorderThickness="0,0,0,1" 
                        BorderBrush="#444448"
                        Margin="0,0,0,5"
                        Padding="10"
                        x:Name="ExpandedOptions"
                        Opacity="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="Analyze Files" 
                                    Style="{StaticResource SecondaryActionButtonStyle}"
                                    Width="120" 
                                    Margin="5,0"
                                    Click="OnAnalyzeFilesClick"/>
                            <Button Content="Edit Metadata" 
                                    Style="{StaticResource SecondaryActionButtonStyle}"
                                    Width="120"
                                    Margin="5,0"
                                    Click="OnEditMetadataClick"/>
                            <Button Content="Batch Process" 
                                    Style="{StaticResource SecondaryActionButtonStyle}"
                                    Width="120"
                                    Margin="5,0"
                                    Click="OnBatchProcessClick"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="Back to Menu" 
                                Style="{StaticResource SecondaryActionButtonStyle}"
                                Click="OnCollapseViewClick"/>
                    </Grid>
                </Border>

                <ListBox Grid.Row="2" 
                         Margin="10" 
                         Background="Transparent" 
                         BorderThickness="0"
                         Foreground="#E0E0E0"
                         Name="FileListBox">
                    <ListBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#007ACC"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}"
                                                BorderThickness="0"
                                                CornerRadius="3">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#3E3E42"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3E3E42"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                </ListBox>

                <!-- Quick Action Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,20">
                    <Button Content="Process Files"
                            Margin="8"
                            Width="140"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="OnProcessFilesClick" />
                    <Button Content="Clear List"
                            Margin="8"
                            Width="140"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="OnClearListClick" />
                    <Button Content="Browse Files"
                            Margin="8"
                            Width="140"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="OnBrowseFilesClick" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>